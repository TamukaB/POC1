<div class="container">
  <div class="row justify-content-center"> <%# Centers content %>
    <div class="col-md-6">
      <div class="card shadow-lg rounded-lg p-4"> <%# Added padding for spacing %>
        <div class="card-body">
          <h2 class="text-center mb-4">Create Your Account</h2>

          <%= javascript_include_tag "registration" %>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }) do |f| %>
                      
            <div class="mb-3">
              <%= f.label :phone_number, class: "form-label" %>
              <%= f.text_field :phone_number, autofocus: true, class: "form-control", placeholder: "Enter your phone number", required: true %>
            </div>
            
            <div class="mb-4"> <%# Increased spacing below this input %>
              <%= f.label :handle, class: "form-label" %>
              <%= f.text_field :handle, class: "form-control", placeholder: "Choose a unique handle", required: true %>
            </div>

            <!-- Hidden field for device fingerprint -->
            <%= f.hidden_field :device_fingerprint, id: "device_fingerprint" %>

            <div class="d-grid gap-2">
              <%= f.submit "Sign Up", class: "btn btn-primary btn-lg" %>
            </div>
          
          
          <% end %>

          <p class="text-center mt-5"> <%# Keeps spacing proportional %>
            Already have an account? <%= link_to "Sign in", new_session_path(resource_name), class: "text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
