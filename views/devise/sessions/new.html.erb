<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg rounded-lg">
        <div class="card-body">
          <h2 class="text-center mb-4">Sign In</h2>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>

            <div class="mb-3">
              <%= f.label :phone_number, class: "form-label" %>
              <%= f.text_field :phone_number, autofocus: true, class: "form-control", placeholder: "Enter your phone number", required: true %>
            </div>

            <div class="d-grid gap-2 mt-4">
              <%= f.submit "Sign In", class: "btn btn-primary btn-lg" %>
            </div>

          <% end %>

          <p class="text-center mt-3">
            Don't have an account? <%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none" %>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
