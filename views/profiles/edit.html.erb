<div class="container">
  <div class="card shadow-lg rounded-lg">
    <div class="card-body">
      <h2 class="text-center mb-4">Edit Profile</h2>

      <% if current_user.errors.any? %>
        <div class="alert alert-danger">
          <h4 class="alert-heading"><%= pluralize(current_user.errors.count, "error") %> prevented this profile from being saved:</h4>
          <ul class="mb-0">
            <% current_user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_for(current_user, url: profile_path, html: { method: :put, class: "needs-validation" }) do |f| %>

        <div class="mb-3">
          <%= f.label :phone_number, "Phone Number", class: "form-label" %>
          <%= f.text_field :phone_number, readonly: true, class: "form-control" %>
        </div>

        <div class="mb-4"> <%# Added spacing %>
          <%= f.label :handle, "GUID (Unique Handle)", class: "form-label" %>
          <%= f.text_field :handle, required: true, class: "form-control" %>
        </div>

        <div class="d-grid gap-2 mt-3">
          <%= f.submit "Update Profile", class: "btn btn-primary btn-lg" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
