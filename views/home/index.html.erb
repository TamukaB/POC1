<div class="home-container">
  <div class="welcome-card">
    <% if user_signed_in? %>
      <h1 class="welcome-text">
        Welcome, <%= current_user.handle %>
      </h1>
      <div class="button-group">
        <%= link_to "Profile", profile_path, class: "btn btn-secondary btn-lg" %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-danger btn-lg", data: { confirm: "Are you sure you want to sign out?" } %>
      </div>
    <% else %>
      <h1 class="welcome-text">
        Welcome to the SuperApp POC
      <div class="button-group">
        <%= link_to "Login", new_user_session_path, class: "btn btn-primary btn-lg" %>
        <%= link_to "Register", new_user_registration_path, class: "btn btn-success btn-lg" %>
      </div>
    <% end %>
  </div>
</div>
